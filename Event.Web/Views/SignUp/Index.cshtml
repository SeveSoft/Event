@using Event.Common.Enum
@model Event.Web.Models.SignUpModel
@{
    ViewData["Title"] = "Sign Up For MARVEL Convention";
}
<form asp-action="SignUpUserForConvention">
    <div>
        <h2 class="display-4">Sign Up For MARVEL Convention</h2>
        <hr />
        <div class="row form-group">
            <div class="col-md-2">
                <label>Convention</label>
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(x => Model.SelectedConventionId, new SelectList(Model.Conventions, "Id", "Name"), "-- SELECT --", htmlAttributes: new { @class = "form-control", onchange = "document.forms[0].submit();" })
            </div>
        </div>@if (Model.SelectedConventionId > 0)
        {
            <div class="row form-group">

                <div class="col-md-2">
                    <label>Select Venue</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(x => Model.SelectedVenueId, new SelectList(Model.Conventions.Single(t => t.Id == Model.SelectedConventionId).Venues, "Id", "Name"), "-- SELECT --", htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label>Sign up as</label>
                </div>
                <div class="col-md-4">
                    <input checked style="margin: 0 10px 10px 0"  type="radio" asp-for="SelectedUserRole" value="@UserRole.Participant" />Participant
                    <br />
                    <input style="margin: 0 10px 10px 0" type="radio" asp-for="SelectedUserRole" value="@UserRole.Speaker" />Speaker
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="@Model.Name" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="@Model.Address"></label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="@Model.Address" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="@Model.Email"></label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="@Model.Email" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label>Phone Number</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="@Model.PhoneNumber" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <input style="margin: 0 10px 0 0" type="checkbox" asp-for="HasAcceptedTermsAndConditions" /><a asp-controller="Home" asp-action="Profile">I agree to the terms and conditions</a>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <input style="margin: 0 10px 0 0" type="checkbox" />Send me information about products, services, deals or recommendations by email (optional)

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary float-right">Sign Up</button>
                </div>
            </div>
        }
    </div>
</form>
