@model Event.Web.Models.ConventionModel;

<div class="row">
    <h3>@ViewData["title"]</h3>
</div>

<div class="col-md-10">
    <table class="table">
        <tr>
            <th>Place</th>
            <th>City</th>
            <th>Postal Code</th>
        </tr>
        @foreach (var venue in Model.SelectedConvention.Venues)
        {

            <tr>
                <td>@venue.Name</td>
                <td>@venue.City</td>
                <td>@venue.PostalCode</td>
                <td><a asp-controller="Convention" asp-action="ShowConvention" class="float-right">Delete</a></td>
            </tr>
        }
    </table>
</div>
<div class="row">
    <div class="col-md-5">
        <a asp-action="Index">Back</a>
    </div>
    <div class="col-md-5">
        <a class="float-right" asp-action="ShowVenues" asp-route-conventionId="@Model.SelectedConvention.Id">Add Venue</a>
    </div>
</div>

