@model Event.Web.Models.ConventionModel
<div class="row">
    <h3>MARVEL CONVENTIONS</h3>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <table class="table">
            @foreach (var convention in Model.Conventions)
            {
            <tr>
                <td>
                    <a asp-controller="Convention" asp-action="ShowConvention" asp-route-conventionId="@convention.Id">@convention.Name</a>
                </td>
                <td>
                    <a asp-controller="Convention" asp-action="ShowConvention" class="float-right">Edit</a>
                </td>
                <td>
                    <a asp-controller="Convention" asp-action="ShowConvention" class="float-right">Delete</a>
                </td>
            </tr>
            }
        </table>
        <a asp-action="CreateConvention">Create new Convention</a>

    </div>
</div>