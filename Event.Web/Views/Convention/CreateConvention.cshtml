@model Event.Web.Models.ConventionModel;
    <div class="row">
        <h3>ADD MARVEL CONVENTIONS</h3>
    </div>
<form asp-action="CreateConvention">
    <div class="row form-group">
        <div class="col-md-2">
            <label asp-for="@Model.SelectedConvention.Name"></label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="@Model.SelectedConvention.Name" />
